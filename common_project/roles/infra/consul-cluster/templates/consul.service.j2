[Unit]
Description=Consul Startup process
After=network-online.target

[Service]
Type=simple
ExecStart=/bin/bash -c 'consul agent -config-dir {{ consul.config_dir }}/ -bind {{ hostvars[inventory_hostname].ansible_host }}'
TimeoutStartSec=0

[Install]
WantedBy=default.target
