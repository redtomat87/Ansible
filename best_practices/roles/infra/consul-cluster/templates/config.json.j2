{
    {% if inventory_hostname in groups['consul-master'] %}
    "bootstrap_expect": {{ groups['consul-cluster'] | length }},
    {% endif %}
    "client_addr": "0.0.0.0",
    "datacenter": "{{ datacenter }}",
    "data_dir": "{{ consul_data_dir }}",
    "domain": "consul",
    "enable_script_checks": true,
    "dns_config": {
        "enable_truncate": true,
        "only_passing": true
    },
    "enable_syslog": true,
    "encrypt": "{{ consul.key }}",
    "leave_on_terminate": false,
    "log_level": "INFO",
    "rejoin_after_leave": true,
    "server": true,
    "start_join": [
    {% for host in groups['consul-cluster']%}
    {% if loop.last %}"{{hostvars[host].inventory_hostname}}"
    {% else %}
    "{{hostvars[host].inventory_hostname}}",
    {% endif %}
    {% endfor %}
    ],
    "ui_config": {
      "enabled": true
    },
    "disable_update_check": true,
    "ports": {
    "grpc": 8502
     },
     "connect": {
     "enabled": true
  }
}
